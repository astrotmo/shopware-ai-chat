<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

  <card>
    <title>AI Chat Widget</title>

    <input-field type="url">
      <name>chatUrl</name>
      <label>Chat server URL (iframe)</label>
      <placeholder>https://your-chat-app.example/chat</placeholder>
    </input-field>

    <input-field type="single-select">
      <name>llmModel</name>
      <label>Ollama model</label>
      <options>
        <option>
          <id>llama3.1:8b</id>
          <name>Llama3.1:8b</name>
        </option>
        <option>
          <id>mistral:7b</id>
          <name>Mistral:7b</name>
        </option>
        <option>
          <id>gpt-oss:20b</id>
          <name>GPT-oss:20b</name>
        </option>
        <option>
          <id>ministral-3:8b</id>
          <name>Ministral-3:8b</name>
        </option>
        <option>
          <id>functiongemma:latest</id>
          <name>Functiongemma:270m</name>
        </option>
        <option>
          <id>qwen3-vl:8b</id>
          <name>Qwen3-vl:8b</name>
        </option>
      </options>
      <defaultValue>llama3.1:8b</defaultValue>
      <placeholder>Llama3.1:8b</placeholder>
    </input-field>

    <input-field type="text">
      <name>welcomeMessage</name>
      <label>Welcome message</label>
      <placeholder>Hallo, wie kann ich behilflich sein?</placeholder>
      <defaultValue>Hallo, wie kann ich behilflich sein?</defaultValue>
    </input-field>

    <input-field type="bool">
      <name>autoOpen</name>
      <label>Auto-open on first visit?</label>
      <defaultValue>false</defaultValue>
    </input-field>

    <input-field type="text">
      <name>buttonLabel</name>
      <label>Button label</label>
      <placeholder>Chat</placeholder>
      <defaultValue>Chat</defaultValue>
    </input-field>

    <input-field type="single-select">
      <name>position</name>
      <label>Position</label>
      <options>
        <option>
          <id>bottom-right</id>
          <name>bottom-right</name>
        </option>
        <option>
          <id>bottom-left</id>
          <name>bottom-left</name>
        </option>
      </options>
      <defaultValue>bottom-right</defaultValue>
    </input-field>

  </card>
</config>
